<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hiroki.p2p_test.SockActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVER"
        android:id="@+id/srv_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIENT"
        android:id="@+id/clt_btn"
        android:layout_below="@+id/srv_btn"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/hintText"
        android:inputType="textMultiLine"
        android:lines="16"
        android:scrollIndicators="right"
        android:scrollbars="vertical"
        android:layout_below="@+id/clt_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/send_btn"
        android:layout_alignTop="@+id/srv_btn"
        android:layout_alignEnd="@+id/hintText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        android:id="@+id/close_btn"
        android:layout_below="@+id/send_btn"
        android:layout_alignEnd="@+id/hintText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alive"
        android:id="@+id/alive_btn"
        android:layout_below="@+id/srv_btn"
        android:layout_toStartOf="@+id/send_btn" />
</RelativeLayout>
